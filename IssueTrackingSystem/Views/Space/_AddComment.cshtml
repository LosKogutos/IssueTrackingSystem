@model IssueTrackingSystem.Models.CommentViewModel


@using (Html.BeginForm("AddComment", "Space", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>New Comment</h4>
        @Html.HiddenFor(model => model.TicketId)  
        @Html.HiddenFor(model => model.Spacename)
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Comment Text</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control" , style="width:680px;"} )
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
