@model IEnumerable<IssueTrackingSystem.Models.UserProfile>

@{
    ViewBag.Title = "ManageSpace";
}

<h2>Manage @ViewBag.Spacename</h2>

<h3>List of users with access to this space</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @using (Html.BeginForm("RemoveAccessForUser", "Admin", new { id = item.Id, spacename = ViewBag.Spacename }, FormMethod.Post, null))
                {
                    <input type="submit" value="Remove user from Space" class="btn btn-default" />
                }
            </td>
        </tr>
    }

</table>
<br />

    @Html.ActionLink("Add new user to Space", "AddAccessForUser", new { spacename = ViewBag.Spacename })


